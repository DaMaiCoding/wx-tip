{
  "name": "wx-tip",
  "productName": "wxTip",
  "version": "1.0.0",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron src/main/index.js",
    "dev": "electron src/main/index.js",
    "build": "electron-builder --win --config.compression=maximum",
    "postbuild": "node scripts/clean-dist.js",
    "build:portable": "electron-builder --win --publish never",
    "clean": "rimraf dist",
    "license:check": "license-checker --production --summary --failOn \"GPL;LGPL;AGPL\""
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "build": {
    "appId": "com.wxtip.app",
    "productName": "wxTip",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/icon.png",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/main/services",
        "to": "services",
        "filter": [
          "**/*",
          "!**/*.log",
          "!**/*.tmp"
        ]
      },
      {
        "from": "assets/icon.png",
        "to": "assets/icon.png"
      }
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "compression": "maximum",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "wxTip",
      "deleteAppDataOnUninstall": false,
      "license": "LICENSE",
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage"
      ]
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "publish": {
      "provider": "github",
      "owner": "your-username",
      "repo": "wx-tip"
    }
  },
  "keywords": [],
  "author": "wx-tip Contributors",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "license-checker": "^25.0.1",
    "nodemon": "^3.1.11",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "body-parser": "^2.2.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "express": "^5.2.1"
  }
}